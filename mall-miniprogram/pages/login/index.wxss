.login-container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-container {
  margin: 80rpx 0;
}

.default-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.login-tips {
  width: 100%;
  margin-bottom: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sub-tips {
  color: #888;
  font-size: 26rpx;
  margin-top: 20rpx;
}

.login-btn {
  width: 85% !important;
  border-radius: 40rpx;
}

.login-form {
  padding: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item input {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  border: 1px solid #ddd;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.login-btn:active {
  opacity: 0.8;
} 