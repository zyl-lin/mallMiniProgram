.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 120rpx;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

.address-section {
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

.address-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.address-info {
  flex: 1;
  padding-right: 20rpx;
}

.user-info {
  margin-bottom: 10rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.phone {
  color: #666;
  font-size: 28rpx;
}

.address-text {
  color: #333;
  font-size: 28rpx;
  line-height: 1.4;
}

.no-address {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #999;
  font-size: 28rpx;
}

.address-arrow {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.address-arrow image {
  width: 32rpx;
  height: 32rpx;
}

.goods-list {
  background: #fff;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
}

.goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.goods-info {
  flex: 1;
  margin-left: 20rpx;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.goods-price-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  color: #e93b3d;
  font-size: 32rpx;
  font-weight: bold;
}

.goods-count {
  color: #999;
  font-size: 26rpx;
}

.order-info {
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.total-wrap {
  color: #666;
}

.total-price {
  color: #e93b3d;
  font-size: 36rpx;
  font-weight: bold;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.03);
}

.submit-btn {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(to right, #ff4f4f, #e93b3d);
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.submit-btn:active {
  opacity: 0.9;
} 