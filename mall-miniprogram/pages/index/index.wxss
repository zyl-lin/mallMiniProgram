.banner {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.more {
  float: right;
  color: #999;
  font-weight: normal;
}

.goods-list {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto;
  margin: 0 -10rpx;
}

.goods-item {
  width: 200rpx;
  margin: 10rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.goods-img {
  width: 200rpx;
  height: 200rpx;
  display: block;
  background-color: #f5f5f5;
}

.goods-info {
  padding: 16rpx;
  position: relative;
}

.goods-name {
  font-size: 28rpx;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-price {
  color: #e93b3d;
  font-size: 32rpx;
  font-weight: bold;
}

.add-cart {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  width: 48rpx;
  height: 48rpx;
}

.add-cart image {
  width: 100%;
  height: 100%;
} 