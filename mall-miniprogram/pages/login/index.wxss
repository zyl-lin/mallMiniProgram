.login-form {
  padding: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item input {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  border: 1px solid #ddd;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #e93b3d;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.login-btn:active {
  opacity: 0.8;
} 