.container {
  padding-bottom: 120rpx;
  background: #f7f7f7;
  min-height: 100vh;
}

.empty-cart {
  text-align: center;
  padding: 160rpx 0;
}

.empty-cart image {
  width: 280rpx;
  height: 280rpx;
  margin-bottom: 30rpx;
}

.empty-cart text {
  display: block;
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.cart-list {
  background: #fff;
  margin-top: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fff;
}

.checkbox {
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox image {
  width: 44rpx;
  height: 44rpx;
}

.goods-img {
  width: 180rpx;
  height: 180rpx;
  margin: 0 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.goods-info {
  flex: 1;
  padding-right: 20rpx;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.goods-price {
  color: #e93b3d;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.quantity-wrapper {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 8rpx;
  width: fit-content;
  padding: 4rpx;
}

.quantity-btn {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  background: #fff;
  border-radius: 6rpx;
  color: #666;
  font-size: 28rpx;
}

.quantity {
  min-width: 80rpx;
  text-align: center;
  margin: 0 16rpx;
  color: #333;
  font-size: 28rpx;
}

.delete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  color: #999;
  font-size: 40rpx;
  font-weight: lighter;
  padding: 20rpx;
}

.delete-btn:active {
  color: #666;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.select-all {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select-all image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 16rpx;
}

.select-all text {
  font-size: 28rpx;
  color: #333;
}

.total-wrapper {
  flex: 1;
  text-align: right;
  padding-right: 30rpx;
}

.total-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 12rpx;
}

.total-price {
  font-size: 40rpx;
  color: #e93b3d;
  font-weight: bold;
}

.settlement-btn {
  width: 220rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  background: linear-gradient(to right, #ff4f4f, #e93b3d);
  color: #fff;
  border-radius: 42rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(233,59,61,0.3);
}

.settlement-btn:active {
  opacity: 0.9;
  transform: translateY(2rpx);
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

.go-shopping {
  width: 260rpx;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 42rpx;
  background: linear-gradient(to right, #ff4f4f, #e93b3d);
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(233,59,61,0.3);
}

.address-section {
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

.address-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.address-info {
  flex: 1;
  padding-right: 20rpx;
}

.user-info {
  margin-bottom: 10rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.phone {
  color: #666;
  font-size: 28rpx;
}

.address-text {
  color: #333;
  font-size: 28rpx;
  line-height: 1.4;
}

.no-address {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #999;
  font-size: 28rpx;
}

.address-arrow {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.address-arrow image {
  width: 32rpx;
  height: 32rpx;
}

.cart-list {
  margin: 20rpx;
} 