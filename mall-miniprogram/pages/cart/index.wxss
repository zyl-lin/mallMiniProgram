.container {
  padding-bottom: 120rpx;
  background: #f5f5f5;
}

.empty-cart {
  text-align: center;
  padding: 120rpx 0;
}

.empty-cart image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
}

.empty-cart text {
  display: block;
  color: #999;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.cart-list {
  background: #fff;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.checkbox {
  padding: 20rpx;
}

.checkbox image {
  width: 40rpx;
  height: 40rpx;
}

.goods-img {
  width: 160rpx;
  height: 160rpx;
  margin: 0 20rpx;
  border-radius: 8rpx;
}

.goods-info {
  flex: 1;
}

.goods-name {
  font-size: 28rpx;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-price {
  color: #e93b3d;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.quantity-wrapper {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
}

.quantity {
  min-width: 60rpx;
  text-align: center;
  margin: 0 20rpx;
}

.delete-btn {
  padding: 20rpx;
}

.delete-btn image {
  width: 40rpx;
  height: 40rpx;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.select-all {
  display: flex;
  align-items: center;
}

.select-all image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.total-wrapper {
  flex: 1;
  text-align: right;
  padding-right: 20rpx;
}

.total-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.total-price {
  font-size: 36rpx;
  color: #e93b3d;
  font-weight: bold;
}

.settlement-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #e93b3d;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
}

.settlement-btn:active {
  opacity: 0.9;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

.go-shopping {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background: #e93b3d;
  color: #fff;
  font-size: 28rpx;
} 