.goods-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.goods-item {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.goods-img {
  width: 100%;
  height: 300rpx;
  display: block;
  background-color: #f5f5f5;
}

.goods-info {
  padding: 16rpx;
  position: relative;
}

.goods-name {
  font-size: 28rpx;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-price {
  color: #e93b3d;
  font-size: 32rpx;
  font-weight: bold;
}

.add-cart {
  position: absolute;
  right: 16rpx;
  bottom: 20rpx;
  width: 48rpx;
  height: 48rpx;
  padding: 8rpx;
  background: rgba(233, 59, 61, 0.1);
  border-radius: 50%;
}

.add-cart image {
  width: 100%;
  height: 100%;
}

.add-cart:active {
  background: rgba(233, 59, 61, 0.2);
}

.loading, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
} 