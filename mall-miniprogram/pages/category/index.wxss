.category-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.category-item {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  text-align: center;
}

.category-img {
  width: 100%;
  height: 200rpx;
}

.category-name {
  padding: 20rpx;
  font-size: 28rpx;
} 