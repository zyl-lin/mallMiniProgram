.container {
  padding-bottom: 100rpx;
}

.goods-swiper {
  width: 100%;
  height: 750rpx;
}

.goods-swiper image {
  width: 100%;
  height: 100%;
}

.goods-info {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.goods-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.goods-price {
  color: #e93b3d;
  font-size: 36rpx;
  font-weight: bold;
}

.goods-detail {
  background: #fff;
  padding: 30rpx;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.detail-content {
  font-size: 28rpx;
  line-height: 1.6;
}

.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.cart-icon {
  width: 120rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  position: relative;
}

.cart-icon image {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 6rpx;
}

.cart-icon text {
  font-size: 24rpx;
  color: #666;
}

.btn-group {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.add-cart {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #ff9500;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.buy-now {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #e93b3d;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
} 