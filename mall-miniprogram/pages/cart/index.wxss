.cart-list {
  padding-bottom: 100rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.checkbox {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.checkbox image {
  width: 40rpx;
  height: 40rpx;
}

.goods-img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
}

.goods-info {
  flex: 1;
}

.goods-name {
  font-size: 28rpx;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-price {
  color: #e93b3d;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.quantity {
  display: flex;
  align-items: center;
}

.minus, .plus {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border: 1px solid #ddd;
  border-radius: 8rpx;
}

.number {
  width: 80rpx;
  text-align: center;
  margin: 0 12rpx;
}

.delete {
  margin-left: 20rpx;
}

.delete image {
  width: 40rpx;
  height: 40rpx;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.footer .checkbox {
  margin-right: 40rpx;
}

.footer .checkbox text {
  margin-left: 12rpx;
}

.total {
  flex: 1;
  text-align: right;
  margin-right: 20rpx;
}

.total .price {
  color: #e93b3d;
  font-size: 32rpx;
  font-weight: bold;
}

.settlement {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #e93b3d;
  color: #fff;
  border-radius: 40rpx;
} 