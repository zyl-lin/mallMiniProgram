/* pages/address/edit/index.wxss */
.container {
  min-height: 100vh;
  padding-bottom: 120rpx;
  background: #f7f7f7;
}

.form-group {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 30rpx;
}

.form-item {
  display: flex;
  align-items: flex-start;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  color: #333;
  font-size: 28rpx;
  padding-top: 4rpx;
}

.input {
  flex: 1;
  height: 44rpx;
  min-height: 44rpx;
  font-size: 28rpx;
}

.textarea {
  flex: 1;
  height: 120rpx;
  font-size: 28rpx;
}

.picker {
  flex: 1;
  font-size: 28rpx;
}

.placeholder {
  color: #999;
}

.switch-item {
  justify-content: space-between;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.05);
}

.save-btn {
  width: 100% !important;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
}